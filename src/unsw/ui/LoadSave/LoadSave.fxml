<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" styleClass="background" stylesheets="@LoadSaveStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unsw.ui.LoadSave.LoadSaveController">
   <children>
      <Label styleClass="title" text="Load a saved game">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Label>
      <ListView fx:id="list" prefHeight="358.0" prefWidth="600.0" styleClass="listView" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </ListView>
      <ButtonBar nodeOrientation="RIGHT_TO_LEFT">
         <buttons>
            <Button mnemonicParsing="false" onAction="#load" text="Load">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font></Button>
            <Button mnemonicParsing="false" onAction="#delete" text="Delete">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font></Button>
            <Button mnemonicParsing="false" onAction="#quit" text="â†© Return">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font></Button>
         </buttons>
         <padding>
            <Insets right="50.0" />
         </padding>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </ButtonBar>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
